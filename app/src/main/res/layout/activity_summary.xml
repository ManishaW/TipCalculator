<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_summary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.manisha.tipcalculator.Summary">

    <TextView
        android:text="Tip Per Person:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView17"
        android:fontFamily="sans-serif-condensed"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/background_dark"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/textView16"
        android:layout_alignLeft="@+id/textView14"
        android:layout_alignStart="@+id/textView14" />

    <TextView
        android:text="Tip Percentage:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView14"
        android:fontFamily="sans-serif-condensed"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/textView8"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignStart="@+id/textView10"
        android:textColor="@android:color/background_dark" />

    <TextView
        android:text="SUMMARY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/textView7"
        android:fontFamily="sans-serif-condensed"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/holo_green_light"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Number of People Paying:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:id="@+id/textView8"
        android:fontFamily="sans-serif-condensed"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:layout_below="@+id/textView10"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9"
        android:textColor="@android:color/background_dark" />

    <TextView
        android:text="Tip Amount:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:fontFamily="sans-serif-condensed"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/background_dark"
        android:layout_below="@+id/textView14"
        android:layout_alignLeft="@+id/textView16"
        android:layout_alignStart="@+id/textView16"
        android:layout_marginTop="18dp" />

    <TextView
        android:text="Total Amount:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView16"
        android:fontFamily="sans-serif-condensed"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/background_dark"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/textView9"
        android:layout_alignLeft="@+id/textView15"
        android:layout_alignStart="@+id/textView15" />

    <TextView
        android:text="Each Person Pays:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView15"
        android:fontFamily="sans-serif-condensed"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/background_dark"
        android:layout_below="@+id/textView17"
        android:layout_alignLeft="@+id/textView17"
        android:layout_alignStart="@+id/textView17"
        android:layout_marginTop="20dp" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sum_TipPerPerson"
        android:textAlignment="textEnd"
        android:layout_alignBottom="@+id/textView17"
        android:layout_alignLeft="@+id/sum_TotalAmount"
        android:layout_alignStart="@+id/sum_TotalAmount"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@android:color/background_dark" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sum_EachPersonPays"
        android:textAlignment="textEnd"
        android:layout_alignTop="@+id/textView15"
        android:layout_alignLeft="@+id/sum_TipPerPerson"
        android:layout_alignStart="@+id/sum_TipPerPerson"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@android:color/background_dark" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sum_TotalAmount"
        android:textAlignment="textEnd"
        android:layout_above="@+id/textView17"
        android:layout_alignLeft="@+id/sum_TipAmount"
        android:layout_alignStart="@+id/sum_TipAmount"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@android:color/background_dark" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sum_TipAmount"
        android:textAlignment="textEnd"
        android:layout_alignTop="@+id/textView9"
        android:layout_alignLeft="@+id/sum_TipPercent"
        android:layout_alignStart="@+id/sum_TipPercent"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@android:color/background_dark" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sum_TipPercent"
        android:textAlignment="textEnd"
        android:layout_alignBottom="@+id/textView14"
        android:layout_alignLeft="@+id/sum_NumPeople"
        android:layout_alignStart="@+id/sum_NumPeople"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@android:color/background_dark" />

    <TextView
        android:text="Tip Calculator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:fontFamily="sans-serif-condensed"
        android:textSize="48sp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/holo_blue_dark"
        android:textAlignment="center"
        android:layout_marginTop="38dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sum_BillAmount"
        android:textAlignment="textEnd"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@android:color/background_dark"
        android:layout_alignTop="@+id/textView10"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sum_NumPeople"
        android:textAlignment="textEnd"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@android:color/background_dark"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignLeft="@+id/sum_BillAmount"
        android:layout_alignStart="@+id/sum_BillAmount" />

    <TextView
        android:text="Bill Amount:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:id="@+id/textView10"
        android:fontFamily="sans-serif-condensed"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/background_dark"
        android:layout_below="@+id/textView7"
        android:layout_toLeftOf="@+id/textView7"
        android:layout_toStartOf="@+id/textView7" />

</RelativeLayout>
